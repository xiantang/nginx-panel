<html>
	<h1>
		{{ .title }}
	</h1>
	<form id="form">
		<input type="text" name="domain" placeholder="Enter domain name">
		<textarea  name="config"> </textarea>
		<input type="submit" value="Submit">
	</form>
</html>

<!--post body as json use java script-->
